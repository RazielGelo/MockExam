doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		//- CSS
		link(rel="stylesheet", href='/css/style.css')
		link(rel="stylesheet", href='/css/lists.css')
		link(href="https://fonts.googleapis.com/css2?family=Inter&family=Raleway:wght@500;600;700;800&display=swap" rel="stylesheet")
		block script
		title Secret Santa
	body
		header
			h1 Secret Santa
			if user
				div
					h2 Welcome #{user.username}
				ul
					li
						a(href='/logout') LOGOUT
			else
				ul
					li
						a(href='/register') SIGN UP
		hr
		main
			if errors
				div(class="alert-error") #{errors}
			if message
				div(class="alert-success") #{message}
			block content